@page "/Admin/Lessons"
@{
    ViewData["Title"] = "Manage Lessons";
}
<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container">
    <div class="d-flex justify-content-between align-items-center">
        @* --- DYNAMIC HEADER --- *@
        <h1 class="admin-header mb-0" id="dynamicHeader">Manage Lessons</h1>
        <button class="btn btn-success" id="addNewBtn"><i class="fas fa-plus"></i> Add New Lesson</button>
    </div>
    <p class="admin-description">Manage the lessons for the selected level. All changes are saved instantly.</p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="lessonsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Lesson Name</th>
                    <th>Description</th>
                    <th>Order</th>
                    <th>Activities</th>
                    <th class="actions-column">Actions</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <!-- Loading spinner or lessons -->
            </tbody>
            <tfoot id="newEntryTfoot" style="display: none;">
                <tr class="new-entry-row">
                    <td>(New)</td>
                    <td><input type="text" id="newName" class="form-control" placeholder="Lesson Name"></td>
                    <td><input type="text" id="newDescription" class="form-control" placeholder="Description"></td>
                    <td><input type="number" id="newOrder" class="form-control" placeholder="Order"></td>
                    <td>(N/A)</td>
                    <td class="actions-column">
                        <button class="btn btn-sm btn-success btn-save-new">Save</button>
                        <button class="btn btn-sm btn-secondary btn-cancel-new">Cancel</button>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
    <a href="/Admin/Levels" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Back to Levels</a>
</div>

@section Scripts {
    <script src="~/js/admin/lessons.js"></script>
}